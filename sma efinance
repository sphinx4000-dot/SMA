<script>
// Language
const content = {
  en:{title:"SMA TOKEN",desc:"SMA Token is a community-driven digital asset built on Binance Smart Chain (BSC), designed for gaming, rewards, and interactive platforms.",aboutTitle:"About SMA Token",aboutText:"SMA Token focuses on transparency, low fees, and long-term growth, offering fast transactions and seamless integration with dApps.",tokenTitle:"Tokenomics",roadmapTitle:"Roadmap"},
  fr:{title:"SMA TOKEN",desc:"SMA Token est un actif num√©rique communautaire construit sur Binance Smart Chain (BSC), con√ßu pour les jeux, les r√©compenses et les plateformes interactives.",aboutTitle:"√Ä propos de SMA Token",aboutText:"SMA Token se concentre sur la transparence, les faibles frais et la croissance √† long terme, offrant des transactions rapides et une int√©gration transparente avec les applications d√©centralis√©es (dApps).",tokenTitle:"Tokenomics",roadmapTitle:"Feuille de route"}
}
function setLang(lang){for(const id in content[lang])document.getElementById(id).innerText=content[lang][id];}

// Wallet
async function connectWallet(){if(window.ethereum){await ethereum.request({method:'eth_requestAccounts'});alert("Wallet Connected ‚úî");}else{alert("Please install MetaMask");}}

// Live SMA Price
let smaPriceBNB=0;
async function fetchSMAPrice(){
  try{
    const query=`{pair(id:"0xe9e7cea3dedca5984780bafc599bd69add087d56"){token0Price}}`;
    const res=await fetch("https://api.thegraph.com/subgraphs/name/pancakeswap/exchange-v2",{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({query})});
    const data=await res.json();
    smaPriceBNB=parseFloat(data.data.pair.token0Price);
  }catch(e){console.error("Error SMA price",e);}
}
fetchSMAPrice();setInterval(fetchSMAPrice,20000);

// Buy Calculator
let tradingFeeBNB=0.000025,priceImpactPercent=4.48,slippagePercent=0.5;
function calculateSMA(){
  const amount=parseFloat(document.getElementById("amountInput").value);
  const currency=document.getElementById("currencySelect").value;
  if(isNaN(amount)||amount<=0){document.getElementById("smaOutput").innerText="Enter valid amount";return;}
  let price=(currency==="bnb")?smaPriceBNB: smaPriceBNB*400;
  const smaAmount=amount/price;
  document.getElementById("smaOutput").innerText=`You will get ~${Math.floor(smaAmount).toLocaleString()} SMA`;
  document.getElementById("feeOutput").innerText=`Estimated Trading Fee: ${tradingFeeBNB} BNB`;
  document.getElementById("impactOutput").innerText=`Price Impact: ${priceImpactPercent}% | Slippage: ${slippagePercent}%`;
  document.getElementById("riskOutput").innerText=`Medium Risk detected for SMA`;
  document.getElementById("btnBuySMA").style.display="inline-block";
}
function buySMA(){
  const amount=parseFloat(document.getElementById("amountInput").value);
  const currency=document.getElementById("currencySelect").value;
  let url="";
  if(currency==="bnb"){url=`https://pancakeswap.finance/swap?outputCurrency=0x63a090c6530F7A190f4f77604FCBF1218273ac24&exactAmount=${amount}&chain=bsc`;}
  else{url=`https://pancakeswap.finance/swap?inputCurrency=0x55d398326f99059ff775485246999027b3197955&outputCurrency=0x63a090c6530F7A190f4f77604FCBF1218273ac24&exactAmount=${amount}&chain=bsc`;}
  window.open(url,'_blank');
}

// Tokenomics Chart
const ctx=document.getElementById('tokenChart').getContext('2d');
new Chart(ctx,{type:'pie',data:{labels:['Liquidity','Gaming & Rewards','Community & Marketing','Team Tokens','Development'],datasets:[{data:[20,40,25,10,5],backgroundColor:['#1e88e5','#ff7043','#4caf50','#7c4dff','#fdd835'],borderColor:'#0b1220',borderWidth:2}]}});

</script>
